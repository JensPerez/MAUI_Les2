<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Les2.Oefening2"
             xmlns:viewmodel="clr-namespace:Les2.ViewModel"
             Title="Oefening2">
    <VerticalStackLayout>

        <HorizontalStackLayout>
            <Entry Placeholder="Naam" Text="{Binding Naam}" Margin="5" />
            <Entry Placeholder="Email" Text="{Binding Email}" Keyboard="Email" Margin="5" />

        </HorizontalStackLayout>
        <Entry Placeholder="Telefoon" Text="{Binding Telefoon}" Keyboard="Telephone" />

        <VerticalStackLayout Margin="5" RadioButtonGroup.SelectedValue="{Binding Geslacht}">
            <Label Text="Geslacht" />
            <RadioButton Content="M" Value="M" />
            <RadioButton Content="V" Value="V" />
            <RadioButton Content="A" Value="A" />
        </VerticalStackLayout>
        <Button Text="Opslaan" Command="{Binding UitvoerTonenCommand}" />
        <Label Text="{Binding Resultaat}" />

    </VerticalStackLayout>
</ContentPage>